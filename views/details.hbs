<section id="details-info">
    <h1>Details</h1>
    <div class="coin-image">
        <img src="{{currCrypto.cryptoImage}}">
    </div>

    <div class="coin-info">
        <div class="coin-text">
            <h1 id="name">{{currCrypto.cryptoName}}</h1>
            <h3 id="payment">Payment method: {{currCrypto.paymentMethod}}</h3>
            <p id="price"><span>Price: ${{currCrypto.price}}</span></p>
            <p id="description">{{currCrypto.description}}</p>
        </div>
        
        <div class="product-btn">

            {{#if isAuthenticated}}
                {{#if isOwner}}
            <!--Only for registered user and author of the publication -->
                    <div class="author">
                        <a href="/catalog/{{currCrypto._id}}/edit" class="btn-edit">Edit</a>
                        <a href="/catalog/{{currCrypto._id}}/delete" class="btn-delete">Delete</a>
                    </div>
                {{else}}
                    {{#if isBuyer}}
                        <!-- Logged in user who has already buy this crypto-->
                        <p class="buy-message">You already bought these crypto coins.</p>
                    {{else}}
                        <!-- Logged in user who has not yet buy this crypto-->
                        <a href="/catalog/{{currCrypto._id}}/buy" class="btn-buy">Buy</a>
                     {{/if}}
                {{/if}}
            {{/if}}
                
        </div>
    </div>
</section>